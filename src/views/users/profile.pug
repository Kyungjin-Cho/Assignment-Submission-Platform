extends ../base
include ../mixins/video

block content
    div.profile__data
        a(href=`/users/${user._id}`)
        if user.avatarUrl
            img.header__avatar(src="/" + user.avatarUrl)
        else
            span.header__temp ğŸ˜€
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found
