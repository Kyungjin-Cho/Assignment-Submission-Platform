extends ../base
include ../mixins/video

block content
    div.profile__data
        a(href=`/users/${user._id}`)
        if !user.avatarUrl
            span.header__temp ğŸ˜€
        else
            if user.avatarUrl.includes("github")
                img.header__avatar(src=user.avatarUrl)
            else 
                img.header__avatar(src="/" + user.avatarUrl)
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found
