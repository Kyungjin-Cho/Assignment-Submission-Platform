extends base.pug
include mixins/video

block content
    // Search form
    form(method="GET").search__form
        input(placeholder="Search by title",name="keyword", type="text")
        button
            i.fas.fa-search
    // Display videos found or show empty message
    div.video-grid
        each video in videos 
            +video(video)
        else
            span.empty__message No videos found